{
  "info": {
    "name": "Setu eSign API Collection",
    "description": "Complete collection for testing Setu eSign APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://dg-sandbox.setu.co",
      "type": "string"
    },
    {
      "key": "client_id",
      "value": "YOUR_CLIENT_ID",
      "type": "string"
    },
    {
      "key": "client_secret",
      "value": "YOUR_CLIENT_SECRET",
      "type": "string"
    },
    {
      "key": "product_instance_id",
      "value": "YOUR_PRODUCT_INSTANCE_ID",
      "type": "string"
    },
    {
      "key": "document_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "signature_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Upload Document",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-client-id",
            "value": "{{client_id}}",
            "type": "text"
          },
          {
            "key": "x-client-secret",
            "value": "{{client_secret}}",
            "type": "text"
          },
          {
            "key": "x-product-instance-id",
            "value": "{{product_instance_id}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "name",
              "value": "sample-contract.pdf",
              "type": "text"
            },
            {
              "key": "document",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/documents",
          "host": ["{{base_url}}"],
          "path": ["api", "documents"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.environment.set('document_id', response.documentId);",
              "    console.log('Document ID saved:', response.documentId);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "2. Initiate Signature",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "x-client-id",
            "value": "{{client_id}}",
            "type": "text"
          },
          {
            "key": "x-client-secret",
            "value": "{{client_secret}}",
            "type": "text"
          },
          {
            "key": "x-product-instance-id",
            "value": "{{product_instance_id}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"documentId\": \"{{document_id}}\",\n  \"redirectUrl\": \"https://your-app.com/callback\",\n  \"signers\": [\n    {\n      \"name\": \"Test Signer\",\n      \"email\": \"test@example.com\",\n      \"phone\": \"9999999999\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/signature",
          "host": ["{{base_url}}"],
          "path": ["api", "signature"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.environment.set('signature_id', response.id);",
              "    console.log('Signature ID saved:', response.id);",
              "    console.log('Signature URL:', response.signatureUrl);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "3. Get Signature Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-client-id",
            "value": "{{client_id}}",
            "type": "text"
          },
          {
            "key": "x-client-secret",
            "value": "{{client_secret}}",
            "type": "text"
          },
          {
            "key": "x-product-instance-id",
            "value": "{{product_instance_id}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/signature/{{signature_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "signature", "{{signature_id}}"]
        }
      }
    },
    {
      "name": "4. Download Signed Document",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-client-id",
            "value": "{{client_id}}",
            "type": "text"
          },
          {
            "key": "x-client-secret",
            "value": "{{client_secret}}",
            "type": "text"
          },
          {
            "key": "x-product-instance-id",
            "value": "{{product_instance_id}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/documents/{{document_id}}/download",
          "host": ["{{base_url}}"],
          "path": ["api", "documents", "{{document_id}}", "download"]
        }
      }
    }
  ]
}